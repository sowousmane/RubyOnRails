<p id="notice"><%= notice %></p>


<di class="row"> <div class="col-sm-11"> <h1>Buildings</h1></div> <div class="col-sm new_text"> <%= link_to 'New Building', new_building_path %></div></div>

<table class="table table-striped table-secondary">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="container">  
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active row">
      <div class="col"></div><div class="col">
        <%= image_tag("renovation-immeuble-bureaux-gravity-paris-ga-1664-640x360.jpeg") %>  </div>
      </div>

      <div class=" row item">
        <div class="col"></div><div class="col">
        <%= image_tag("immeuble-beton-rue-danton-paris.jpeg") %> </div>
      </div>
    
      <div class=" row item">
        <div class="col"></div><div class="col">
       <%= image_tag("L’isolation-acoustique-d’une-salle-de-home-cinéma1.jpeg") %> </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div id="foot"></div>


