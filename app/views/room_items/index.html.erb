<p id="notice"><%= notice %></p>

<h1>Room Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
    <th>Room name </th>
    <th> Item name</th>
      <th colspan="3"> actions </th>
    </tr>
  </thead>

  <tbody>
    <% @room_items.each do |room_item| %>
      <tr>
      <td><%= room_item.Room_id %></td><td><%= room_item.Item_id %></td>
        <td><%= link_to 'Show', room_item %></td>
        <td><%= link_to 'Edit', edit_room_item_path(room_item) %></td>
        <td><%= link_to 'Destroy', room_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

